<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomesauce.android.questgiver.android.MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/overview_heading"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View TestQuest"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false"
        android:onClick="viewTestQuest"
        android:id="@+id/testQuest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View TestQuest2"
        android:id="@+id/testQuest2"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/testQuest"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="viewTestQuest2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View TestQuest3"
        android:id="@+id/button"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/testQuest2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="viewTestQuest3" />
</RelativeLayout>
