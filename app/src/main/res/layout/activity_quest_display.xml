<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awesomesauce.android.questgiver.android.QuestDisplayActivity"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/quest_title_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="null description"
        android:id="@+id/quest_description"
        android:layout_below="@+id/quest_title_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_quest"
        android:id="@+id/start_quest"
        android:onClick="startQuest"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/status_text"
        android:id="@+id/current_status_text"
        android:layout_above="@+id/start_quest"
        android:layout_toLeftOf="@+id/quest_title_view"
        android:layout_toStartOf="@+id/quest_title_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="status"
        android:id="@+id/current_status"
        android:layout_alignTop="@+id/current_status_text"
        android:layout_toRightOf="@+id/quest_title_view"
        android:layout_toEndOf="@+id/quest_title_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/quest_requirements"
        android:id="@+id/quest_requirements"
        android:layout_below="@+id/quest_description"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/current_status_text"
        android:layout_alignRight="@+id/start_quest"
        android:layout_alignEnd="@+id/start_quest"
        android:layout_below="@+id/quest_requirements"
        android:id="@+id/questRequirements">

    </LinearLayout>

</RelativeLayout>
